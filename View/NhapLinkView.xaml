<Window x:Class="OrderManagerment_WPF.View.NhapLinkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManagerment_WPF.View" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        
        Title="NhapLinkView" Height="300" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Orientation="Vertical" >
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="STT" Width="70" TextAlignment="Center" Background="#FFF5E005" FontSize="20"  />
                <TextBlock Text="MÃ SẢN PHẨM" Width="250" Margin="10,0"  Background="#FFF5E005" TextAlignment="Center" FontSize="20" />
                <TextBlock Text="TÊN HIỂN THỊ" Width="200" TextAlignment="Center" Background="#FFF5E005" FontSize="20"></TextBlock>
                <TextBlock Text="LINK" Width="445" Margin="10,0,0,0" Background="#FFF5E005" TextAlignment="Center" FontSize="20" ></TextBlock>
            </StackPanel>
            <StackPanel  DataContext="{StaticResource BangBaoGia}" Orientation="Horizontal">
                <ComboBox Name="CbSheet" Height="50" Width="70" 
                           ItemsSource="{Binding STT }"  Margin="0,0,10,0" HorizontalAlignment="Center"
                          Padding="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding STTLink}" CommandParameter="{Binding ElementName=CbSheet, Path=SelectedItem}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <TextBox Margin="0,0,10,0" DataContext="{StaticResource BangBaoGia}" 
                           Text="{Binding _Str}" Width="250" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" />
                <TextBox DataContext="{StaticResource BangBaoGia}"
                         Text="{Binding content}"
                         Height="50" Width="200" Margin="0,0,10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" ></TextBox>
                <TextBox DataContext="{StaticResource BangBaoGia}" Height="50" Width="445" TextWrapping="Wrap" HorizontalContentAlignment="Center"
                         Text="{Binding uri}"
                         VerticalContentAlignment="Center" FontSize="18"></TextBox>
            </StackPanel>

        </StackPanel>
        <Button 
            Width="80" HorizontalAlignment="Left"
                Content="Trở về" Padding="0" ></Button>
        <Button DataContext="{StaticResource BangBaoGia}" Command="{Binding HoanThanhLink}" Width="80" HorizontalAlignment="Right" Content="Nhập link" Padding="0" Click="Button_Click" ></Button>
    </Grid>
</Window>
