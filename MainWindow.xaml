<Window x:Class="OrderManagerment_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManagerment_WPF"
        mc:Ignorable="d"
        xmlns:materialDesign="https://materialdesigninxaml.net/winfx/xaml/themes"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Title="MainWindow" Height="1080" Width="1920">
    <Viewbox Margin="0,0,-4,-4">
        <Grid Height="1053" Width="1920" DataContext="{StaticResource MainViewModel}">
            <ContentControl Content="{Binding SelectedViewModel}">

            </ContentControl>

        </Grid>
    </Viewbox>

</Window>
